<div class="container" >
    <div class="hero-unit"><h1>Customer List</h1></div>

    <table class="table table-rounded table-striped">
      <tr>
        <th>Name</th>
        <th>Phone number</th>
        <th>Contact</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.contact %></td>
        <td><%= link_to 'Show', customer_orders_path(customer) %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, confirm: 'Are you sure?', method: :delete %></td>
        <td><%= link_to 'Place Order', new_customer_order_path(customer) %></td>
        <td><%= link_to 'View Orders', customer %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to 'New Customer', new_customer_path %>
</div>
